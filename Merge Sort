 #include<iostream>

    using namespace std;

    int main ()

    {

        int arr[10], a, i, max, min;

        cout << "Enter the size of the array : ";

        cin >> a;

        cout << "Enter the elements of the array : ";

        for (i = 0; i < a; i++)

            cin >> arr[i];

        max = arr[0];

        for (i = 0; i < a; i++)

        {

            if (max < arr[i])

                max = arr[i];

        }

        min = arr[0];

        for (i = 0; i < a; i++)

        {

            if (min > arr[i])

                min = arr[i];

        }

        cout << "Largest element : " << max;

        cout << "Smallest element : " << min;

        return 0;

    }
